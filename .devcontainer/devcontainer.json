{
    "name": "Rocq Development",
    "build": {
        "dockerfile": "Dockerfile.rocq",
        "args": {
            "ROCQ_VERSION": "9.0.1-native-ocaml-4.14.2-flambda",
            "VSROCQ_VERSION": "2.3.1"
        }
    },
    "init": true,
    "containerEnv": {
        "OPAMYES": "1"
    },
    "forwardPorts": [
        31517
    ],
    "portsAttributes": {
        "31517": {
            "label": "Documentation Server",
            "onAutoForward": "silent"
        }
    },
    "otherPortsAttributes": {
        "onAutoForward": "silent"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "GuidoTapia2.unicode-math-vscode",
                "rocq-prover.vsrocq@2.3.1",
                "ritwickdey.LiveServer"
            ],
            "settings": {
                "editor.fontLigatures": true,
                "[rocq]": {
                    "editor.tabSize": 2,
                    "editor.unicodeHighlight.ambiguousCharacters": false
                },
                "liveServer.settings.donotShowInfoMsg": true,
                "liveServer.settings.NoBrowser": true,
                "liveServer.settings.port": 31517,
                "liveServer.settings.root": "/html"
            }
        }
    }
}